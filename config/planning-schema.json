{
  "name": "planning-schema",
  "description": "JSON Schema for xAI Structured Outputs API - enforces valid planning response format",
  "version": "1.1.0",
  "apiReference": "https://docs.x.ai/docs/guides/structured-outputs",
  "changelog": {
    "1.1.0": "Added patterns array for fallback glob patterns, fallbackAction field, required flag"
  },
  "schema": {
    "type": "json_schema",
    "json_schema": {
      "name": "agent_plan",
      "strict": true,
      "schema": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string",
            "description": "Brief description of what needs to be done"
          },
          "todos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": { "type": "string", "description": "Step description (under 50 chars)" },
                "order": { "type": "integer", "description": "Step order (1, 2, 3...)" }
              },
              "required": ["text", "order"],
              "additionalProperties": false
            }
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["file", "url"], "description": "Action type" },
                "pattern": { "type": "string", "description": "Primary glob pattern for file type (deprecated - use patterns array)" },
                "patterns": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Glob patterns to try in order (first match wins). Most specific first."
                },
                "url": { "type": "string", "description": "URL to fetch for url type" },
                "reason": { "type": "string", "description": "Why this action is needed" },
                "required": { "type": "boolean", "description": "If true, task cannot proceed without this file" },
                "fallbackAction": {
                  "type": "string",
                  "enum": ["ask_user", "skip", "create_new"],
                  "description": "What to do if all patterns fail"
                }
              },
              "required": ["type", "reason"],
              "additionalProperties": false
            }
          }
        },
        "required": ["summary", "todos", "actions"],
        "additionalProperties": false
      }
    }
  }
}
